<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- App branding color for app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Darker variant for the status bar and contextual app bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Theme UI controls like checkboxes and text fields  -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for header text in the order form -->
    <style name="QuesStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/Color</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/Color</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="SelectionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ans">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:text">@string/ans</item>
        <item name="android:textColor">@color/ans</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="ans_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/ans</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>
